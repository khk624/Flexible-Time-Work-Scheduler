<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.hkhang.flexibleworktimescheduler.MainActivity">

    <CalendarView
        android:layout_width="368dp"
        android:layout_height="340dp"
        android:id="@+id/calendarView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <TextView
        android:text="Week"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:id="@+id/textView_week"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="352dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <TextView
        android:text="Start Time:"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_startTime_str"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/textView_week" />

    <TextView
        android:text="00:00"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_startTime_time"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_week"
        app:layout_constraintLeft_toRightOf="@+id/textView_startTime_str" />

    <TextView
        android:text="End Time:"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_endTime_str"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@id/textView_startTime_str"
        app:layout_constraintTop_toBottomOf="@+id/textView_week"
        app:layout_constraintLeft_toRightOf="@+id/textView_startTime_time" />

    <TextView
        android:text="00:00"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_endTime_time"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_week"
        app:layout_constraintLeft_toRightOf="@+id/textView_endTime_str" />

    <TextView
        android:text="Total:"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_total_str"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/textView_startTime_str" />

    <TextView
        android:text="00:00"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_total_time"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView_total_str"
        app:layout_constraintLeft_toRightOf="@+id/textView_total_str" />

    <TextView
        android:text="Remaining:"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_remaining_str"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView_total_time"
        app:layout_constraintLeft_toRightOf="@+id/textView_total_time" />

    <TextView
        android:text="40:00"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/textView_remaining_time"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView_remaining_str"
        app:layout_constraintLeft_toRightOf="@+id/textView_remaining_str" />

    <TextView
        android:text="Holiday / Vacation Info:"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/textView_vacation_str"
        app:layout_constraintLeft_toLeftOf="@id/textView_total_str"
        app:layout_constraintTop_toBottomOf="@+id/textView_total_str" />

    <TextView
        android:text="NONE"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:id="@+id/textView_vacation"
        app:layout_constraintLeft_toLeftOf="@+id/textView_remaining_str"
        app:layout_constraintTop_toTopOf="@+id/textView_vacation_str" />

</android.support.constraint.ConstraintLayout>
