<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.hkhang.flexibleworktimescheduler.MainActivity">

    <CalendarView
        android:layout_width="368dp"
        android:layout_height="340dp"
        android:id="@+id/calendarView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <TextView
        android:text="Week"
        android:layout_width="247dp"
        android:layout_height="39dp"
        android:id="@+id/textView_week"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        app:layout_constraintBottom_toTopOf="@+id/textView_total_str" />

    <TextView
        android:text="Total:"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:id="@+id/textView_total_str"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        android:layout_marginTop="64dp" />

    <TextView
        android:text="Remaining"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:id="@+id/textView_remaining_str"
        app:layout_constraintLeft_toLeftOf="@+id/textView_total_str"
        app:layout_constraintTop_toBottomOf="@+id/textView_total_str"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="00:00"
        android:layout_width="173dp"
        android:layout_height="41dp"
        android:id="@+id/textView_total_time"
        app:layout_constraintLeft_toRightOf="@+id/textView_total_str"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView_total_str"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.63" />

    <TextView
        android:text="40:00"
        android:layout_width="173dp"
        android:layout_height="41dp"
        android:id="@+id/textView_remaining_time"
        app:layout_constraintLeft_toRightOf="@+id/textView_remaining_str"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView_remaining_str"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.66" />

</android.support.constraint.ConstraintLayout>
